<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="app.lahzebar.features.profile.TitleProfileFragment"
    tools:ignore="SpUsage">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/back_box"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/profile_tv_fnp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="?attr/palphone_light_font"
        android:maxLines="1"
        android:layout_margin="30dp"
        android:text="@string/profile"
        android:textAllCaps="true"
        android:textColor="@color/palphone_white"
        android:textSize="@dimen/palphone_menu_title_under_box_font_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/description_title_tv_fnb"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:ellipsize="end"
        android:fontFamily="?attr/palphone_light_font"
        android:maxLines="1"
        android:text="@string/DESCRIPTION"
        android:layout_marginHorizontal="30dp"
        android:textColor="?attr/palphone_title_color"
        android:textSize="@dimen/large_font_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_tv_fnp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/description_tv_fnb"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:fontFamily="?attr/palphone_light_font"
        android:maxLines="1"
        android:textColor="?attr/palphone_profile_filled_edittext"
        android:textDirection="ltr"
        android:textSize="@dimen/xxlarge_font_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description_title_tv_fnb" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/read_more_tv_fnb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="?attr/palphone_light_font"
        android:includeFontPadding="false"
        android:padding="10dp"
        android:text="@string/MORE"
        android:textColor="?attr/palphone_read_more_text_color"
        android:textSize="@dimen/normal_font_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description_tv_fnb" />


</androidx.constraintlayout.widget.ConstraintLayout>
